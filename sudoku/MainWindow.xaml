<Window x:Class="sudoku.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sudoku"
        mc:Ignorable="d"
        Title="数独" ResizeMode="NoResize" WindowStyle="SingleBorderWindow" Width="656" Height="520">
    <Grid x:Name="Main" VerticalAlignment="Center" Height="520">
        <!--数独区-->
        <Grid x:Name="SudokuPanel" HorizontalAlignment="Left" Height="360" VerticalAlignment="Center" Width="360" Margin="24,96,24,24">
            <Border Background="Red"/>
        </Grid>

        <!--操作区-->
        <Grid x:Name="FunctionPanel" HorizontalAlignment="Left" Height="360" VerticalAlignment="Center" Width="208" Margin="408,72,0,0"  Background="White">
            <Border Background="Yellow"/>
        </Grid>

        <!--功能区-->
        <Grid x:Name="ToolBar" HorizontalAlignment="Center" VerticalAlignment="Top" Height="72" Width="656" Margin="0,18,0,0" Grid.Column="2" Background="#FFF5F5F5">
            <Border Background="Blue"/>
        </Grid>




    </Grid>
</Window>
